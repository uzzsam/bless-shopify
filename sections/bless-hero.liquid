{% javascript %}
const heroSection = document.getElementById('BlessHero-{{ section.id }}');
if (heroSection) {
  const cta = heroSection.querySelector('.bless-hero__cta');
  if (cta) {
    const targetSelector = cta.getAttribute('href');
    if (targetSelector && targetSelector.startsWith('#')) {
      cta.addEventListener('click', (event) => {
        const targetElement = document.querySelector(targetSelector);
        if (targetElement) {
          event.preventDefault();
          targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    }
  }

  // Handle custom video controls for overlay video
  const deferredMedia = heroSection.querySelector('deferred-media');
  if (deferredMedia) {
    // Wait for deferred-media to process and make video available
    const initializeVideoControls = () => {
      const focusVideo = heroSection.querySelector('.bless-hero__focus-video');
      const controlBar = heroSection.querySelector('.bless-hero__control-bar');

      if (focusVideo instanceof HTMLMediaElement && controlBar) {
        const playButton = controlBar.querySelector('[data-control="play"]');
        const muteButton = controlBar.querySelector('[data-control="mute"]');
        const playIcon = playButton?.querySelector('[aria-hidden="true"]') || null;
        const muteIconWrapper = muteButton?.querySelector('.bless-hero__sound-icon-wrapper') || null;
        const muteGlyph = muteButton?.querySelector('.bless-hero__sound-glyph') || null;
        const muteIconImg = muteButton?.querySelector('.bless-hero__sound-icon') || null;

        const syncPlayState = () => {
          if (!playButton || !playIcon) return;
          if (focusVideo.paused) {
            playIcon.textContent = 'â–º';
            playButton.setAttribute('aria-label', 'Play');
            playButton.setAttribute('title', 'Play');
          } else {
            playIcon.textContent = 'âšâš';
            playButton.setAttribute('aria-label', 'Pause');
            playButton.setAttribute('title', 'Pause');
          }
        };

        const syncMuteState = () => {
          if (!muteButton) return;
          const isMuted = focusVideo.muted;
          muteButton.classList.toggle('is-muted', isMuted);
          muteButton.setAttribute('aria-label', isMuted ? 'Unmute' : 'Mute');
          muteButton.setAttribute('title', isMuted ? 'Unmute' : 'Mute');
          if (muteGlyph) {
            muteGlyph.textContent = isMuted ? 'ðŸ”‡' : 'ðŸ”Š';
          }
          if (muteIconImg) {
            muteIconImg.style.opacity = isMuted ? '0.7' : '1';
          }
          if (muteIconWrapper && !muteIconImg && !muteGlyph) {
            muteButton.textContent = isMuted ? 'ðŸ”‡' : 'ðŸ”Š';
          }
        };

        controlBar.hidden = false;

        // Ensure video is unmuted for custom controls
        focusVideo.muted = false;
        focusVideo.defaultMuted = false;
        focusVideo.removeAttribute('muted');

        const initialise = () => {
          focusVideo.pause();
          focusVideo.currentTime = 0;
          syncPlayState();
          syncMuteState();
        };

        // Initialize when video is ready
        if (focusVideo.readyState >= 2) {
          initialise();
        } else {
          focusVideo.addEventListener('loadedmetadata', initialise, { once: true });
        }

        playButton?.addEventListener('click', () => {
          if (focusVideo.paused) {
            const playPromise = focusVideo.play();
            if (playPromise && typeof playPromise.then === 'function') {
              playPromise
                .then(syncPlayState)
                .catch((error) => {
                  console.warn('Hero video play failed', error);
                  syncPlayState();
                });
            } else {
              syncPlayState();
            }
          } else {
            focusVideo.pause();
            syncPlayState();
          }
        });

        muteButton?.addEventListener('click', () => {
          focusVideo.muted = !focusVideo.muted;
          syncMuteState();
        });

        focusVideo.addEventListener('play', syncPlayState);
        focusVideo.addEventListener('pause', syncPlayState);
        focusVideo.addEventListener('ended', () => {
          focusVideo.pause();
          focusVideo.currentTime = 0;
          syncPlayState();
        });

        focusVideo.addEventListener('error', () => {
          console.warn('Bless hero focus video encountered an error');
        });
      }
    };

    // Try to initialize immediately
    initializeVideoControls();

    // Also try after a short delay to account for deferred-media processing
    setTimeout(initializeVideoControls, 100);

    // Listen for when deferred-media shows the video
    deferredMedia.addEventListener('showDeferredMedia', initializeVideoControls, { once: true });
  }
}
