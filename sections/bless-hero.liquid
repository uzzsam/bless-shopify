{% liquid
  assign background_video = section.settings.video_background
  assign overlay_video = section.settings.video_overlay
  assign overlay_rgb = section.settings.overlay_color | default: '46, 94, 76'
  assign overlay_alpha = section.settings.overlay_opacity | default: 45 | times: 0.01
  assign content_padding_top = section.settings.content_padding_top | default: 0
  assign content_padding_bottom = section.settings.content_padding_bottom | default: 48
%}

<section id="BlessHero-{{ section.id }}" class="bless-hero">
  <div class="bless-hero__media-wrap">
    {% if background_video != blank %}
      <div class="bless-hero__background">
        {{
          background_video
          | video_tag:
            autoplay: true,
            loop: true,
            muted: true,
            playsinline: true,
            controls: false,
            class: 'bless-hero__background-video'
        }}
      </div>
    {% endif %}

    <div
      class="bless-hero__overlay"
      style="background-color: rgba({{ overlay_rgb }}, {{ overlay_alpha }})"
    ></div>
  </div>

  <div
    class="bless-hero__content"
    style="padding-top: {{ content_padding_top }}px; padding-bottom: {{ content_padding_bottom }}px;"
  >
    {% if overlay_video != blank %}
      {% assign poster_image = overlay_video.preview_image %}
      {% if poster_image != blank %}
        {% assign poster_url = poster_image | image_url: width: 1600 %}
      {% else %}
        {% assign poster_url = '' %}
      {% endif %}
      <div class="bless-hero__focus">
        {{
          overlay_video
          | video_tag:
            autoplay: false,
            loop: true,
            muted: false,
            playsinline: true,
            controls: false,
            preload: 'metadata',
            poster: poster_url,
            class: 'bless-hero__focus-video'
        }}
        <div class="bless-hero__control-bar" hidden>
          <button type="button" class="bless-hero__control bless-hero__control--play" data-control="play">
            <span class="sr-only">Play video</span>
            <span aria-hidden="true">â–º</span>
          </button>
          <button type="button" class="bless-hero__control bless-hero__control--mute" data-control="mute">
            <span class="sr-only">Mute video</span>
            <span class="bless-hero__sound-icon-wrapper" aria-hidden="true">
              {% if section.settings.sound_icon != blank %}
                <img class="bless-hero__sound-icon" src="{{ section.settings.sound_icon | image_url: width: 64 }}" alt="" loading="lazy">
              {% else %}
                <span class="bless-hero__sound-glyph">ðŸ”Š</span>
              {% endif %}
            </span>
            <span class="bless-hero__mute-slash" aria-hidden="true"></span>
          </button>
        </div>
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h1 class="bless-hero__heading">
        {{ section.settings.heading | escape }}
      </h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="bless-hero__subheading">
        {{ section.settings.subheading | escape }}
      </p>
    {% endif %}

    {% if section.settings.cta_label != blank %}
      <a
        class="bless-hero__cta link"
        href="{{ section.settings.cta_target | default: '#chat-section' }}"
      >
        {{ section.settings.cta_label | escape }}
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
.bless-hero {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: stretch;
  justify-content: center;
  background-color: #184135;
  overflow: hidden;
  color: rgb(var(--color-light-flesh, 236, 227, 214));
  padding-top: 0;
}

.bless-hero__media-wrap {
  position: absolute;
  inset: 0;
  overflow: hidden;
}

.bless-hero__background-video {
  width: 100vw;
  height: 100%;
  object-fit: cover;
  display: block;
}

.bless-hero__overlay {
  position: absolute;
  inset: 0;
  pointer-events: none;
}

.bless-hero__content {
  position: relative;
  z-index: 1;
  max-width: min(620px, 92vw);
  margin: 0 auto;
  text-align: center;
  padding-inline: 1.5rem;
  padding-top: clamp(32px, 6vw, 80px);
  padding-bottom: clamp(32px, 8vw, 96px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  gap: 1.25rem;
  min-height: 100vh;
  box-sizing: border-box;
}

.bless-hero__focus {
  margin: 0 auto;
  width: min(100%, clamp(260px, 20vw + 220px, 520px));
  height: min(88vh, 920px);
  display: flex;
  justify-content: center;
  position: relative;
}

.bless-hero__focus-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0 0 32px 32px;
  box-shadow: 0 32px 60px rgba(0, 0, 0, 0.35);
  background: #000;
}

.bless-hero__heading {
  font-family: var(--font-heading, 'Cardo', serif);
  font-size: clamp(2.5rem, 3vw + 1.5rem, 4rem);
  line-height: 1.1;
  margin: 0;
  text-transform: none;
}

.bless-hero__subheading {
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  font-size: 1.1rem;
  line-height: 1.6;
  margin: 0;
  color: rgba(var(--color-light-flesh, 236, 227, 214), 0.85);
}

.bless-hero__cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.85rem 1.75rem;
  border-radius: 999px;
  background: rgba(var(--color-avocado, 227, 216, 154), 0.92);
  color: rgb(var(--color-dark-green, 46, 94, 76));
  font-weight: 600;
  text-decoration: none;
  transition: transform 200ms ease, background-color 200ms ease;
}

.bless-hero__cta:hover,
.bless-hero__cta:focus {
  transform: translateY(-2px);
  background: rgba(var(--color-avocado, 227, 216, 154), 1);
}

.bless-hero__control-bar {
  position: absolute;
  left: 50%;
  bottom: 1.4rem;
  transform: translateX(-50%);
  display: inline-flex;
  gap: 0.8rem;
  padding: 0.75rem 1.3rem;
  border-radius: 999px;
  background: rgba(0,0,0,0.45);
  backdrop-filter: blur(4px);
  box-shadow: 0 18px 34px rgba(0,0,0,0.35);
  align-items: center;
}

.bless-hero__control {
  border: none;
  background: transparent;
  color: #ffffff;
  font-size: 1.25rem;
  line-height: 1;
  cursor: pointer;
  transition: transform 160ms ease, opacity 160ms ease;
  padding: 0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.bless-hero__control:hover,
.bless-hero__control:focus-visible {
  transform: scale(1.1);
  opacity: 0.9;
}

.bless-hero__control--play span[aria-hidden="true"] {
  font-size: 1.25rem;
  line-height: 1;
}

.bless-hero__sound-icon {
  width: 28px;
  height: 28px;
  display: block;
}

.bless-hero__sound-icon-wrapper,
.bless-hero__sound-glyph {
  display: flex;
  align-items: center;
  justify-content: center;
}

.bless-hero__control--mute {
