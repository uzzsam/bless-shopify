{% liquid
  assign background_video = section.settings.video_background
  assign overlay_video = section.settings.video_overlay
  assign overlay_rgb = section.settings.overlay_color | default: '46, 94, 76'
  assign overlay_alpha = section.settings.overlay_opacity | default: 45 | times: 0.01
  assign content_padding_top = section.settings.content_padding_top | default: 0
  assign content_padding_bottom = section.settings.content_padding_bottom | default: 48
%}

<section id="BlessHero-{{ section.id }}" class="bless-hero">
  <div class="bless-hero__media-wrap">
    {% if background_video != blank %}
      <div class="bless-hero__background">
        {{
          background_video
          | video_tag:
            autoplay: true,
            loop: true,
            muted: true,
            playsinline: true,
            controls: false,
            class: 'bless-hero__background-video'
        }}
      </div>
    {% endif %}

    <div
      class="bless-hero__overlay"
      style="background-color: rgba({{ overlay_rgb }}, {{ overlay_alpha }})"
    ></div>
  </div>

  <div
    class="bless-hero__content"
    style="padding-top: {{ content_padding_top }}px; padding-bottom: {{ content_padding_bottom }}px;"
  >
    {% if overlay_video != blank %}
      <div class="bless-hero__focus">
        <video
          class="bless-hero__focus-video"
          preload="metadata"
          playsinline
          controls
        >
          <source src="{{ overlay_video.sources.first.url }}" type="{{ overlay_video.sources.first.mime_type }}">
          Your browser does not support the video tag.
        </video>
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h1 class="bless-hero__heading">
        {{ section.settings.heading | escape }}
      </h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="bless-hero__subheading">
        {{ section.settings.subheading | escape }}
      </p>
    {% endif %}

    {% if section.settings.cta_label != blank %}
      <a
        class="bless-hero__cta link"
        href="{{ section.settings.cta_target | default: '#chat-section' }}"
      >
        {{ section.settings.cta_label | escape }}
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
.bless-hero {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: stretch;
  justify-content: center;
  background-color: #184135;
  overflow: hidden;
  color: rgb(var(--color-light-flesh, 236, 227, 214));
  padding-top: 0;
}

.bless-hero__media-wrap {
  position: absolute;
  inset: 0;
  overflow: hidden;
}

.bless-hero__background-video {
  width: 100vw;
  height: 100%;
  object-fit: cover;
  display: block;
}

.bless-hero__overlay {
  position: absolute;
  inset: 0;
  pointer-events: none;
}

.bless-hero__content {
  position: relative;
  z-index: 1;
  max-width: min(620px, 92vw);
  margin: 0 auto;
  text-align: center;
  padding-inline: 1.5rem;
  padding-top: clamp(32px, 6vw, 80px);
  padding-bottom: clamp(32px, 8vw, 96px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  gap: 1.25rem;
  min-height: 100vh;
  box-sizing: border-box;
}

.bless-hero__focus {
  margin: 0 auto;
  width: min(100%, clamp(260px, 20vw + 220px, 520px));
  height: min(88vh, 920px);
  display: flex;
  justify-content: center;
  position: relative;
}

.bless-hero__focus-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0 0 32px 32px;
  box-shadow: 0 32px 60px rgba(0, 0, 0, 0.35);
}

.bless-hero__heading {
  font-family: var(--font-heading, 'Cardo', serif);
  font-size: clamp(2.5rem, 3vw + 1.5rem, 4rem);
  line-height: 1.1;
  margin: 0;
  text-transform: none;
}

.bless-hero__subheading {
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  font-size: 1.1rem;
  line-height: 1.6;
  margin: 0;
  color: rgba(var(--color-light-flesh, 236, 227, 214), 0.85);
}

.bless-hero__cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.85rem 1.75rem;
  border-radius: 999px;
  background: rgba(var(--color-avocado, 227, 216, 154), 0.92);
  color: rgb(var(--color-dark-green, 46, 94, 76));
  font-weight: 600;
  text-decoration: none;
  transition: transform 200ms ease, background-color 200ms ease;
}

.bless-hero__cta:hover,
.bless-hero__cta:focus {
  transform: translateY(-2px);
  background: rgba(var(--color-avocado, 227, 216, 154), 1);
}

.bless-hero__focus video::-webkit-media-controls-panel {
  background: rgba(0,0,0,0.35);
}

.bless-hero__focus video::-webkit-media-controls-play-button,
.bless-hero__focus video::-webkit-media-controls-volume-slider 
{
  color: #fff;
}

@media (max-width: 600px) {
  .bless-hero__content {
    padding-inline: 1rem;
    padding-top: clamp(24px, 8vw, 64px);
    padding-bottom: clamp(24px, 10vw, 80px);
  }

  .bless-hero__focus-video {
    border-radius: 0 0 24px 24px;
  }
}
{% endstylesheet %}

{% javascript %}
const heroSection = document.getElementById('BlessHero-{{ section.id }}');
if (heroSection) {
  const cta = heroSection.querySelector('.bless-hero__cta');
  if (cta) {
    const targetSelector = cta.getAttribute('href');
    if (targetSelector && targetSelector.startsWith('#')) {
      cta.addEventListener('click', (event) => {
        const targetElement = document.querySelector(targetSelector);
        if (targetElement) {
          event.preventDefault();
          targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    }
  }

  const focusVideo = heroSection.querySelector('.bless-hero__focus-video');
  const playToggle = heroSection.querySelector('.bless-hero__play-toggle');
  if (focusVideo && playToggle) {
    focusVideo.pause();
    focusVideo.muted = false;
    focusVideo.defaultMuted = false;

    const syncState = () => {
      if (focusVideo.paused) {
        playToggle.classList.remove('is-hidden');
        playToggle.setAttribute('aria-pressed', 'false');
      } else {
        playToggle.classList.add('is-hidden');
        playToggle.setAttribute('aria-pressed', 'true');
      }
    };

    playToggle.addEventListener('click', () => {
      if (focusVideo.paused) {
        const playPromise = focusVideo.play();
        if (playPromise && typeof playPromise.then === 'function') {
          playPromise.catch(() => {
            focusVideo.muted = false;
            focusVideo.play().catch(() => {});
          });
        }
      } else {
        focusVideo.pause();
      }
      syncState();
    });

    focusVideo.addEventListener('pause', syncState);
    focusVideo.addEventListener('ended', syncState);
    focusVideo.addEventListener('play', syncState);

    syncState();
  }
}
{% endjavascript %}

