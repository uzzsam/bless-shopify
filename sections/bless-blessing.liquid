{% liquid
  assign panel_rgb = section.settings.panel_background | default: '236, 227, 214'
  assign panel_opacity = section.settings.panel_opacity | default: 60 | times: 0.01
%}

<section
  id="blessing-section"
  class="bless-blessing bless-overlay-30"
  data-section-id="{{ section.id }}"
  data-auto-scroll="{{ section.settings.auto_scroll | default: false }}"
>
  <div class="bless-blessing__inner">
    {% if section.settings.heading != blank %}
      {% assign raw_heading = section.settings.heading | strip %}
      {% assign heading_words = raw_heading | downcase | split: ' ' %}
      {% capture formatted_heading %}
        {% for word in heading_words %}
          {% assign cleaned = word | strip %}
          {% if cleaned != blank %}
            {{- cleaned | capitalize -}}{% unless forloop.last %} {% endunless %}
          {% endif %}
        {% endfor %}
      {% endcapture %}
      <h2 class="bless-blessing__heading">
        {{ formatted_heading | strip | escape }}
      </h2>
    {% endif %}

    <div
      class="bless-blessing__panel"
      style="background-color: rgba({{ panel_rgb }}, {{ panel_opacity }})"
      data-blessing-panel
    >
      <p class="bless-blessing__placeholder" data-placeholder>
        {{ section.settings.placeholder_text | escape }}
      </p>
      <div class="bless-blessing__content" data-blessing-output hidden></div>

      <div class="bless-blessing__meta" data-blessing-meta hidden>
        <h3 class="bless-blessing__meta-title" data-sidthie-title hidden></h3>
        <p class="bless-blessing__meta-text" data-sidthie-excerpt hidden></p>
      </div>

      <!-- Success message from email collection in chat -->
      <p class="bless-blessing__success-message" data-success-message hidden></p>

      <!-- Continue journey CTA button -->
      <button
        type="button"
        class="bless-blessing__continue-button"
        data-continue-button
        hidden
      >
        Continue your journey
      </button>

      {% if section.settings.show_signup %}
        <form
          class="bless-blessing__signup bless-blessing__signup-form"
          data-blessing-signup
          hidden
          novalidate
          data-signup-endpoint="{{ section.settings.signup_endpoint | escape }}"
          data-success-message="{{ section.settings.signup_success | escape }}"
          data-error-message="{{ section.settings.signup_error | escape }}"
          data-invalid-message="{{ section.settings.signup_invalid | escape }}"
        >
          <input type="hidden" name="sidthie" data-signup-sidthie>
          <label
            class="bless-blessing__signup-label"
            data-signup-prompt
            data-default-prompt="{{ section.settings.signup_prompt | escape }}"
          >
            {{ section.settings.signup_prompt | escape }}
          </label>
          <div class="bless-blessing__signup-row">
            <input
              type="email"
              name="email"
              class="bless-blessing__signup-input"
              placeholder="{{ section.settings.signup_placeholder | escape }}"
              required
            >
            <button type="submit" class="bless-blessing__signup-button" data-signup-submit>
              {{ section.settings.signup_button_label | escape }}
            </button>
          </div>
          <label class="bless-blessing__signup-consent">
            <input
              type="checkbox"
              name="accepts_marketing"
              data-signup-consent
              {% if section.settings.signup_consent_default %}checked{% endif %}
              data-default-checked="{{ section.settings.signup_consent_default }}"
            >
            <span>{{ section.settings.signup_consent_label | escape }}</span>
          </label>
          <p class="bless-blessing__signup-feedback" data-signup-feedback hidden>
            {{ section.settings.signup_success | escape }}
          </p>
        </form>
      {% endif %}

      {% if section.settings.show_copy_button %}
        <button type="button" class="bless-blessing__copy" data-copy-trigger>
          {{ section.settings.copy_button_label | escape }}
        </button>
        <span class="bless-blessing__copy-feedback" data-copy-feedback hidden>
          {{ section.settings.copy_feedback | escape }}
        </span>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
.bless-blessing {
  position: relative;
  isolation: isolate;
  padding: clamp(3.5rem, 6vw, 7rem) 0;
  background: transparent;
  display: flex;
  justify-content: center;
  color: #ffffff; /* ensure white base text color */
}

/* self-contained 30% black overlay (don’t depend on other sections) */
.bless-overlay-30 { position: relative; z-index: 0; }
.bless-overlay-30::before {
  content: "";
  position: absolute; inset: 0;
  background: rgba(0,0,0,.30);
  border-radius: 0; /* section spans full width */
  z-index: -1;       /* sits behind content but above bg image */
  pointer-events: none;
}

.bless-blessing__inner {
  width: min(960px, 90vw);
  display: grid;
  gap: 2rem;
  text-align: center;
}

.bless-blessing__heading {
  font-family: var(--font-heading, 'Cardo', serif);
  font-size: clamp(2.25rem, 3vw + 1.25rem, 3.25rem);
  margin: 0;
  color: #ffffff; /* white heading */
}

/* the frosted blessing panel */
.bless-blessing__panel {
  position: relative;
  padding: clamp(2rem, 4vw, 3rem);
  border-radius: 32px;
  backdrop-filter: blur(12px);
  box-shadow: 0 28px 60px rgba(0, 0, 0, 0.18);
  border: 1px solid rgba(var(--color-light-flesh, 236, 227, 214), 0.25);
}

.bless-blessing__panel::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  border: 1px solid rgba(255, 255, 255, 0.25);
  pointer-events: none;
}

.bless-blessing__placeholder,
.bless-blessing__content {
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  line-height: 1.8;
  margin: 0;
  white-space: pre-line;
  color: #ffffff; /* white for both placeholder + blessing text */
}

/* Load the Cormorant Upright font used for blessings */
@import url('https://fonts.googleapis.com/css2?family=Cormorant+Upright:wght@400;600&display=swap');

/* Apply decorative font + slightly smaller size for better fit */
.bless-blessing__content {
  font-family: 'Cormorant Upright', serif;
  text-align: center;
  font-size: clamp(1.05rem, 1.4vw, 1.25rem);
  line-height: 1.6;
}

.bless-blessing__meta {
  margin-top: 1.75rem;
  display: grid;
  gap: 0.75rem;
  text-align: left;
  color: rgba(255, 255, 255, 0.92);
}

.bless-blessing__meta-title {
  margin: 0;
  font-family: var(--font-heading, 'Cardo', serif);
  font-size: clamp(1.35rem, 1.2vw + 1rem, 1.75rem);
}

.bless-blessing__meta-text {
  margin: 0;
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  line-height: 1.7;
}

.bless-blessing__signup {
  margin-top: clamp(1.75rem, 3vw, 2.5rem);
  display: grid;
  gap: 0.75rem;
  text-align: left;
}

.bless-blessing__signup-label {
  margin: 0;
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.9);
}

.bless-blessing__signup-row {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
}

.bless-blessing__signup-input {
  flex: 1 1 220px;
  min-width: 0;
  padding: 0.8rem 1rem;
  border-radius: 18px;
  border: none;
  font-size: 1rem;
}

.bless-blessing__signup-button {
  padding: 0.8rem 1.75rem;
  border-radius: 999px;
  border: none;
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  font-weight: 600;
  cursor: pointer;
  background: rgba(var(--color-avocado, 227, 216, 154), 0.92);
  color: rgb(var(--color-dark-green, 46, 94, 76));
  transition: transform 200ms ease, background-color 200ms ease;
}

.bless-blessing__signup-consent {
  display: flex;
  align-items: flex-start;
  gap: 0.6rem;
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  font-size: 0.95rem;
  color: rgba(255, 255, 255, 0.85);
}

.bless-blessing__signup-consent input[type="checkbox"] {
  margin-top: 0.2rem;
  accent-color: rgba(var(--color-avocado, 227, 216, 154), 0.92);
}

.bless-blessing__signup-button:hover,
.bless-blessing__signup-button:focus {
  transform: translateY(-1px);
  background: rgba(var(--color-avocado, 227, 216, 154), 1);
}

.bless-blessing__signup-feedback {
  margin: 0;
  font-size: 0.95rem;
  color: rgba(255, 255, 255, 0.78);
}

.bless-blessing__signup-feedback--error {
  color: rgba(255, 180, 171, 0.95);
}

.bless-blessing__panel.is-visible .bless-blessing__content {
  animation: bless-fade-up 500ms ease forwards;
}

.bless-blessing__copy {
  margin-top: 1.75rem;
  padding: 0.75rem 1.75rem;
  border-radius: 999px;
  border: none;
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  font-weight: 600;
  cursor: pointer;
  background: rgba(var(--color-avocado, 227, 216, 154), 0.92);
  color: rgb(var(--color-dark-green, 46, 94, 76));
  transition: transform 200ms ease, background-color 200ms ease;
}

.bless-blessing__copy:hover,
.bless-blessing__copy:focus {
  transform: translateY(-1px);
  background: rgba(var(--color-avocado, 227, 216, 154), 1);
}

.bless-blessing__copy-feedback {
  display: inline-block;
  margin-left: 0.75rem;
  font-size: 0.95rem;
  color: rgba(255,255,255,0.85);
}

@keyframes bless-fade-up {
  from { opacity: 0; transform: translateY(12px); }
  to   { opacity: 1; transform: translateY(0); }
}

/* Success message from email collection */
.bless-blessing__success-message {
  margin: 1.5rem 0 0.75rem 0;
  font-size: 0.95rem;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  animation: bless-fade-up 500ms ease forwards;
}

/* Continue journey button in blessing section */
.bless-blessing__continue-button {
  margin-top: 1.75rem;
  padding: 0.875rem 2.5rem;
  border-radius: 999px;
  border: none;
  background: rgba(var(--color-avocado, 227, 216, 154), 0.95);
  color: rgb(var(--color-dark-green, 46, 94, 76));
  font-family: var(--font-body, 'Albert Sans', sans-serif);
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 200ms ease;
  box-shadow: 0 4px 12px rgba(227, 216, 154, 0.3);
  animation: bless-fade-up 600ms ease forwards;
}

.bless-blessing__continue-button:hover {
  transform: translateY(-2px);
  background: rgba(var(--color-avocado, 227, 216, 154), 1);
  box-shadow: 0 6px 16px rgba(227, 216, 154, 0.4);
}

.bless-blessing__continue-button:active {
  transform: translateY(0);
}

@media (max-width: 520px) {
  .bless-blessing__signup-row {
    flex-direction: column;
    align-items: stretch;
  }

  .bless-blessing__signup-button {
    width: 100%;
  }
}
{% endstylesheet %}

{% javascript %}
(function () {
  const sectionId = '{{ section.id }}';
  const sectionEl = document.querySelector(`[data-section-id="${sectionId}"]`);
  if (!sectionEl) return;

  const panelEl = sectionEl.querySelector('[data-blessing-panel]');
  const placeholderEl = sectionEl.querySelector('[data-placeholder]');
  const contentEl = sectionEl.querySelector('[data-blessing-output]');
  const metaWrapper = sectionEl.querySelector('[data-blessing-meta]');
  const metaTitleEl = sectionEl.querySelector('[data-sidthie-title]');
  const metaTextEl = sectionEl.querySelector('[data-sidthie-excerpt]');
  const successMessageEl = sectionEl.querySelector('[data-success-message]');
  const continueButtonEl = sectionEl.querySelector('[data-continue-button]');
  const signupWrapper = sectionEl.querySelector('[data-blessing-signup]');
  const signupPrompt = sectionEl.querySelector('[data-signup-prompt]');
  const signupSidthieInput = sectionEl.querySelector('[data-signup-sidthie]');
  const copyTrigger = sectionEl.querySelector('[data-copy-trigger]');
  const copyFeedback = sectionEl.querySelector('[data-copy-feedback]');
  const autoScroll = sectionEl.dataset.autoScroll === 'true';
  const defaultSignupPrompt = signupPrompt?.getAttribute('data-default-prompt') || signupPrompt?.textContent || '';
  const signupForm = signupWrapper instanceof HTMLFormElement ? signupWrapper : null;
  const signupEmailInput = signupForm?.querySelector('input[type="email"]') || null;
  const signupConsentInput = signupForm?.querySelector('[data-signup-consent]') || null;
  const signupFeedbackEl = signupForm?.querySelector('[data-signup-feedback]') || null;
  const signupSubmitButton = signupForm?.querySelector('[data-signup-submit]') || null;
  const signupEndpoint =
    (signupForm?.getAttribute('data-signup-endpoint') || '').trim() || '/contact';
  const signupSuccessMessage = signupForm?.getAttribute('data-success-message') || signupFeedbackEl?.textContent || '';
  const signupErrorMessage = signupForm?.getAttribute('data-error-message') || 'We could not save your email. Please try again.';
  const signupInvalidMessage = signupForm?.getAttribute('data-invalid-message') || 'Please enter a valid email address.';
  const consentDefaultChecked = signupConsentInput
    ? signupConsentInput.dataset.defaultChecked !== 'false'
    : false;
  let signupSubmitting = false;
  let latestBlessingDetail = null;

  if (signupConsentInput) {
    signupConsentInput.checked = consentDefaultChecked;
  }

  function setSignupFeedback(message, isError) {
    if (!signupFeedbackEl) return;
    if (!message) {
      signupFeedbackEl.hidden = true;
      signupFeedbackEl.classList.remove('bless-blessing__signup-feedback--error');
      return;
    }
    signupFeedbackEl.textContent = message;
    signupFeedbackEl.hidden = false;
    signupFeedbackEl.classList.toggle('bless-blessing__signup-feedback--error', Boolean(isError));
  }

  function clearSignupFeedback() {
    setSignupFeedback('', false);
  }

  function isValidEmail(value) {
    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
  }

  function revealBlessing(detail) {
    console.log('[BlessBlessing] revealBlessing called with detail', detail);
    if (!contentEl || !panelEl) {
      console.warn('[BlessBlessing] Missing contentEl or panelEl', { contentEl, panelEl });
      return;
    }
    const normalizedDetail = detail
      ? Object.assign({}, detail, {
          blessing: detail.blessing || detail.text || '',
          text: detail.blessing || detail.text || ''
        })
      : null;
    const blessing = normalizedDetail?.blessing;
    if (!blessing) {
      console.warn('[BlessBlessing] No blessing in normalized detail');
      return;
    }

    console.log('[BlessBlessing] normalized detail', normalizedDetail);
    latestBlessingDetail = normalizedDetail;

    // Hide email form if email was already collected in chat
    if (signupWrapper) {
      if (normalizedDetail?.emailCollected) {
        signupWrapper.setAttribute('hidden', 'hidden');
        console.log('[BlessBlessing] Email collected in chat - hiding signup form');
      } else {
        signupWrapper.removeAttribute('hidden');
        clearSignupFeedback();
        console.log('[BlessBlessing] Email NOT collected - showing signup form');
      }
    }

    if (placeholderEl) {
      placeholderEl.hidden = true;
    }

    contentEl.textContent = blessing;
    contentEl.hidden = false;
    panelEl.classList.add('is-visible');

    if (metaWrapper) {
      const hasLabel = Boolean(normalizedDetail?.sidthieLabel);
      const hasExplanation = Boolean(normalizedDetail?.explanation);

      if (metaTitleEl) {
        if (hasLabel) {
          metaTitleEl.textContent = normalizedDetail.sidthieLabel;
          metaTitleEl.removeAttribute('hidden');
        } else {
          metaTitleEl.setAttribute('hidden', 'hidden');
        }
      }

      if (metaTextEl) {
        if (hasExplanation) {
          metaTextEl.textContent = normalizedDetail.explanation;
          metaTextEl.removeAttribute('hidden');
        } else {
          metaTextEl.setAttribute('hidden', 'hidden');
        }
      }

      if (hasLabel || hasExplanation) {
        metaWrapper.removeAttribute('hidden');
      } else {
        metaWrapper.setAttribute('hidden', 'hidden');
      }
    }

    if (signupWrapper) {
      if (signupPrompt) {
        if (defaultSignupPrompt.includes('{sidthie}')) {
          signupPrompt.textContent = defaultSignupPrompt.replace(
            '{sidthie}',
            normalizedDetail?.sidthieLabel || 'your Sidthie'
          );
        } else if (normalizedDetail?.sidthieLabel) {
          signupPrompt.textContent = `${defaultSignupPrompt} (${normalizedDetail.sidthieLabel})`;
        }
      }

      if (signupSidthieInput) {
        signupSidthieInput.value =
          normalizedDetail?.sidthie || normalizedDetail?.sidthieLabel || '';
      }
    }

    // Show success message and continue button if email was collected in chat
    if (normalizedDetail?.emailCollected) {
      console.log('[BlessBlessing] Email was collected in chat, showing success message and button');
      // Get email from event detail or show generic message
      const userEmail = normalizedDetail?.email || 'your email';
      if (successMessageEl) {
        successMessageEl.textContent = 'Perfect! Your blessing has been sent to ' + userEmail;
        successMessageEl.removeAttribute('hidden');
        console.log('[BlessBlessing] Success message shown:', successMessageEl.textContent);
      } else {
        console.warn('[BlessBlessing] successMessageEl not found');
      }

      // Show continue button
      if (continueButtonEl) {
        continueButtonEl.removeAttribute('hidden');
        console.log('[BlessBlessing] Continue button shown and ready for click');
      } else {
        console.warn('[BlessBlessing] continueButtonEl not found');
      }

      // Track if user clicked the continue button
      let userClickedButton = false;

      // If continue button exists, track when it's clicked
      if (continueButtonEl) {
        continueButtonEl.addEventListener('click', function onContinueClick() {
          console.log('[BlessBlessing] User clicked continue button - preventing auto-redirect');
          userClickedButton = true;
          // The button's own click handler will redirect, no need to do it here
        });
      }

      // Auto-redirect to thank-you page after 30 seconds (only if button not clicked)
      console.log('[BlessBlessing] Setting auto-redirect timer for 30 seconds');
      const autoRedirectTimer = setTimeout(() => {
        if (userClickedButton) {
          console.log('[BlessBlessing] User already clicked button, skipping auto-redirect');
          return;
        }

        if (latestBlessingDetail) {
          const userName = latestBlessingDetail.userName || null;
          const sidthieKey = latestBlessingDetail.sidthie || null;

          // Build URL
          const params = new URLSearchParams();
          if (userName) params.append('name', userName);
          if (sidthieKey) params.append('sidthie', sidthieKey);

          const thankYouUrl = '/pages/blessing-thank-you' + (params.toString() ? '?' + params.toString() : '');

          console.log('[BlessBlessing] 30 second timeout elapsed, auto-redirecting to', thankYouUrl);
          window.location.href = thankYouUrl;
        }
      }, 30000); // 30 seconds

      console.log('[BlessBlessing] Auto-redirect timer started - user can click button to skip');
    } else {
      console.warn('[BlessBlessing] Email was NOT collected in chat', { emailCollected: normalizedDetail?.emailCollected });
    }

    if (autoScroll) {
      panelEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  }

  function resetCopyFeedback() {
    if (copyFeedback) copyFeedback.hidden = true;
  }

  if (signupForm) {
    signupForm.addEventListener('submit', (event) => {
      event.preventDefault();
      if (signupSubmitting) return;
      if (!signupEmailInput) return;

      clearSignupFeedback();

      const email = signupEmailInput.value.trim();
      if (!isValidEmail(email)) {
        setSignupFeedback(signupInvalidMessage, true);
        signupEmailInput.focus();
        return;
      }

      if (!latestBlessingDetail || !latestBlessingDetail.blessing) {
        setSignupFeedback(signupErrorMessage, true);
        return;
      }

      signupSubmitting = true;
      if (signupSubmitButton) signupSubmitButton.disabled = true;

      const detail = latestBlessingDetail;
      const formData = new FormData();
      formData.append('form_type', 'customer');
      formData.append('utf8', '✓');
      formData.append('contact[email]', email);
      formData.append(
        'contact[accepts_marketing]',
        signupConsentInput && signupConsentInput.checked ? 'true' : 'false'
      );

      const tags = ['Bless Chat'];
      if (detail.sidthieLabel) {
        tags.push('Sidthie: ' + detail.sidthieLabel);
      }
      formData.append('contact[tags]', tags.join(', '));

      const messageParts = [];
      if (detail.sidthieLabel) {
        messageParts.push('Sidthie: ' + detail.sidthieLabel);
      }
      if (detail.explanation) {
        messageParts.push('Explanation: ' + detail.explanation);
      }
      messageParts.push('Blessing:\n' + detail.blessing);
      formData.append('contact[body]', messageParts.join('\n\n'));

      fetch(signupEndpoint, {
        method: 'POST',
        body: formData,
        headers: { Accept: 'text/html,application/xhtml+xml' }
      })
        .then((response) => {
          if (!response.ok) {
            throw new Error('Request failed with status ' + response.status);
          }
          return response.text();
        })
        .then(() => {
          setSignupFeedback(
            signupSuccessMessage || 'Thank you. Your wisdom will arrive soon.',
            false
          );
          signupEmailInput.value = '';
          if (signupConsentInput) {
            signupConsentInput.checked = consentDefaultChecked;
          }
        })
        .catch((error) => {
          console.error('Bless signup error', error);
          setSignupFeedback(
            signupErrorMessage || signupInvalidMessage,
            true
          );
        })
        .finally(() => {
          signupSubmitting = false;
          if (signupSubmitButton) signupSubmitButton.disabled = false;
        });
    });
  }

  const updateKey = `__blessBlessingUpdate_${sectionId}`;
  if (window[updateKey]) {
    window.removeEventListener('blessing:update', window[updateKey]);
  }
  window[updateKey] = (event) => {
    const detail = event?.detail;
    console.log('[BlessBlessing] blessing:update received', { detail });
    if (!detail) {
      console.warn('[BlessBlessing] No detail in event');
      return;
    }
    revealBlessing(detail);
    resetCopyFeedback();
  };
  window.addEventListener('blessing:update', window[updateKey]);
  console.log('[BlessBlessing] Event listener attached for blessing:update');

  const errorKey = `__blessBlessingError_${sectionId}`;
  if (window[errorKey]) {
    window.removeEventListener('blessing:error', window[errorKey]);
  }
  window[errorKey] = () => {
    resetCopyFeedback();
    clearSignupFeedback();
    signupSubmitting = false;
    latestBlessingDetail = null;
    if (signupSubmitButton) signupSubmitButton.disabled = false;
    if (metaWrapper) metaWrapper.hidden = true;
    if (signupWrapper) signupWrapper.hidden = true;
    if (contentEl) contentEl.hidden = true;
    if (placeholderEl) placeholderEl.hidden = false;
  };
  window.addEventListener('blessing:error', window[errorKey]);

  if (copyTrigger && contentEl) {
    copyTrigger.addEventListener('click', async () => {
      const text = contentEl.textContent?.trim();
      if (!text) return;
      try {
        await navigator.clipboard.writeText(text);
        if (copyFeedback) copyFeedback.hidden = false;
      } catch (error) {
        console.error('Unable to copy blessing', error);
      }
    });
  }

  // Continue button handler - redirects to thank-you page
  if (continueButtonEl) {
    continueButtonEl.addEventListener('click', () => {
      console.log('[BlessBlessing] Continue button clicked by user');
      if (latestBlessingDetail) {
        const userName = latestBlessingDetail.userName || null;
        const sidthieKey = latestBlessingDetail.sidthie || null;

