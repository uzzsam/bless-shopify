{% liquid
  assign carousel_height = section.settings.carousel_height | default: 400
  assign show_arrows = section.settings.show_arrows | default: true
  assign show_autoplay = section.settings.show_autoplay | default: false
  assign autoplay_speed_ms = section.settings.autoplay_speed | default: 5000
  assign autoplay_speed = autoplay_speed_ms | divided_by: 1000
  assign heading = section.settings.heading
  assign product_count = 0
  assign slide_index = 0
%}

<section
  id="{% if section.settings.section_anchor != blank %}{{ section.settings.section_anchor }}{% else %}carousel-{{ section.id }}{% endif %}"
  class="bless-carousel bless-overlay-30"
  data-section-id="{{ section.id }}"
>
  <div class="bless-carousel__wrapper">
    {% if heading != blank %}
      <h2 class="bless-carousel__heading">{{ heading | escape }}</h2>
    {% endif %}

    {% capture slides %}
      {% if section.settings.product_1 %}
        {% render 'carousel-product-slide', product: section.settings.product_1, index: slide_index %}
        {% assign product_count = product_count | plus: 1 %}
        {% assign slide_index = slide_index | plus: 1 %}
      {% endif %}
      {% if section.settings.product_2 %}
        {% render 'carousel-product-slide', product: section.settings.product_2, index: slide_index %}
        {% assign product_count = product_count | plus: 1 %}
        {% assign slide_index = slide_index | plus: 1 %}
      {% endif %}
      {% if section.settings.product_3 %}
        {% render 'carousel-product-slide', product: section.settings.product_3, index: slide_index %}
        {% assign product_count = product_count | plus: 1 %}
        {% assign slide_index = slide_index | plus: 1 %}
      {% endif %}
      {% if section.settings.product_4 %}
        {% render 'carousel-product-slide', product: section.settings.product_4, index: slide_index %}
        {% assign product_count = product_count | plus: 1 %}
        {% assign slide_index = slide_index | plus: 1 %}
      {% endif %}
      {% if section.settings.product_5 %}
        {% render 'carousel-product-slide', product: section.settings.product_5, index: slide_index %}
        {% assign product_count = product_count | plus: 1 %}
        {% assign slide_index = slide_index | plus: 1 %}
      {% endif %}
      {% if section.settings.product_6 %}
        {% render 'carousel-product-slide', product: section.settings.product_6, index: slide_index %}
        {% assign product_count = product_count | plus: 1 %}
        {% assign slide_index = slide_index | plus: 1 %}
      {% endif %}
      {% if section.settings.product_7 %}
        {% render 'carousel-product-slide', product: section.settings.product_7, index: slide_index %}
        {% assign product_count = product_count | plus: 1 %}
        {% assign slide_index = slide_index | plus: 1 %}
      {% endif %}
    {% endcapture %}

    {% if product_count > 0 %}
      {% capture slideshow_style %}height: {{ carousel_height }}px;{% endcapture %}

      {% render 'slideshow',
        slides: slides,
        slide_count: product_count,
        show_arrows: show_arrows,
        autoplay: show_autoplay,
        autoplay_speed: autoplay_speed,
        infinite: true,
        class: 'bless-carousel__slideshow',
        style: slideshow_style
      %}
    {% else %}
      <div class="bless-carousel__empty">
        <p>No products selected. Please select products in the section settings.</p>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .bless-carousel {
    width: 100%;
    padding: clamp(2rem, 5vw, 4rem) 0;
  }

  .bless-carousel__wrapper {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 2rem);
  }

  .bless-carousel__heading {
    font-family: var(--font-heading, 'Cardo', serif);
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 400;
    color: white;
    margin-bottom: clamp(2rem, 4vw, 3rem);
    text-align: center;
    letter-spacing: 0.02em;
    position: relative;
    z-index: 1;
  }

  .bless-carousel__slideshow {
    --slideshow-gap: clamp(1rem, 3vw, 2rem);
    width: 100%;
  }

  slideshow-component {
    display: block;
    width: 100%;
    touch-action: pan-y;
    user-select: none;
    -webkit-user-select: none;
  }

  slideshow-component[dragging] {
    cursor: grabbing;
  }

  slideshow-component:not([dragging]) {
    cursor: grab;
  }

  slideshow-slides {
    display: flex;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    overscroll-behavior: contain;
  }

  .bless-carousel__slide {
    flex-shrink: 0;
    scroll-snap-align: start;
    width: 100%;
    min-height: 100%;
    height: 100%;
  }

  /* Card styling with glass design */
  .bless-carousel__card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 24px;
    overflow: hidden;
    transition: all 200ms ease-out;
    cursor: pointer;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .bless-carousel__card:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  /* Image Container */
  .bless-carousel__image-container {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* 1:1 aspect ratio */
    overflow: hidden;
    border-radius: 20px;
    margin: 10px;
    flex-shrink: 0;
  }

  .bless-carousel__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: opacity 200ms ease-out;
  }

  .bless-carousel__image--primary {
    opacity: 1;
  }

  .bless-carousel__image--secondary {
    opacity: 0;
  }

  /* Hover effect: swap images on desktop */
  @media (hover: hover) and (pointer: fine) {
    .bless-carousel__card:hover .bless-carousel__image--primary {
      opacity: 0;
    }

    .bless-carousel__card:hover .bless-carousel__image--secondary {
      opacity: 1;
    }
  }

  /* Card Content */
  .bless-carousel__content {
    padding: clamp(1rem, 3vw, 1.5rem);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: clamp(0.5rem, 2vw, 1rem);
  }

  .bless-carousel__product-title {
    font-family: var(--font-heading, 'Cardo', serif);
    font-size: clamp(1rem, 2.5vw, 1.3rem);
    font-weight: 500;
    color: var(--color-text, #000);
    margin: 0;
    line-height: 1.3;
  }

  .bless-carousel__product-description {
    font-family: var(--font-body, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif);
    font-size: clamp(0.85rem, 1.8vw, 0.95rem);
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
    line-height: 1.5;
    flex: 1;
  }

  .bless-carousel__link {
    display: inline-block;
    font-size: clamp(0.8rem, 1.5vw, 0.9rem);
    color: var(--color-link, #2E5E4C);
    text-decoration: none;
    font-weight: 500;
    padding: clamp(0.5rem, 1vw, 0.75rem) clamp(0.75rem, 2vw, 1rem);
    border: 1px solid currentColor;
    border-radius: 20px;
    transition: all 200ms ease-out;
    align-self: flex-start;
    margin-top: auto;
  }

  .bless-carousel__link:hover {
    background-color: var(--color-link, #2E5E4C);
    color: white;
  }

  /* Empty state */
  .bless-carousel__empty {
    text-align: center;
    padding: clamp(3rem, 5vw, 5rem) 1rem;
    color: rgba(0, 0, 0, 0.5);
    font-size: 1rem;
  }

  /* Responsive: Mobile */
  @media (max-width: 599px) {
    .bless-carousel__slide {
      width: 100%;
    }
  }

  /* Responsive: Tablet */
  @media (min-width: 600px) and (max-width: 899px) {
    .bless-carousel__slide {
      width: 50%;
    }
  }

  /* Responsive: Desktop */
  @media (min-width: 900px) {
    .bless-carousel__slide {
      width: calc(33.333% - var(--slideshow-gap));
    }
  }

  /* Slideshow component overrides */
  slideshow-component {
    --slideshow-gap: clamp(1rem, 3vw, 2rem);
  }

  /* Slideshow Arrows - Glass Circle Style */
  slideshow-arrows {
    opacity: 1 !important;
  }

  slideshow-arrow {
    opacity: 1 !important;
  }

  slideshow-arrow button {
    width: clamp(48px, 8vw, 64px);
    height: clamp(48px, 8vw, 64px);
    min-width: 48px;
    min-height: 48px;
    background: rgba(255, 255, 255, 0.2) !important;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 200ms ease-out;
    cursor: pointer;
  }

  slideshow-arrow button:hover {
    background: rgba(255, 255, 255, 0.3) !important;
    border-color: rgba(255, 255, 255, 0.5);
    transform: scale(1.1);
  }

  slideshow-arrow button svg {
    width: clamp(20px, 3vw, 28px);
    height: clamp(20px, 3vw, 28px);
    stroke: white;
    stroke-width: 2;
  }


{% endstylesheet %}

{% javascript %}
(function() {
  const isTouchDevice = () => {
    return (('ontouchstart' in window) ||
            (navigator.maxTouchPoints > 0) ||
            (navigator.msMaxTouchPoints > 0));
  };

  // Handle image swapping for touch devices
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.bless-carousel__card');

    cards.forEach(card => {
      const primaryImg = card.querySelector('[data-primary-image]');
      const secondaryImg = card.querySelector('[data-secondary-image]');

      if (!secondaryImg) return;

      if (isTouchDevice()) {
        let imageToggled = false;

        card.addEventListener('click', (e) => {
          if (e.target.closest('.bless-carousel__link')) {
            return;
          }

          e.preventDefault();

          if (!imageToggled) {
            primaryImg.style.opacity = '0';
            secondaryImg.style.opacity = '1';
            imageToggled = true;
          } else {
            window.location.href = card.dataset.productUrl;
          }
        });

        card.addEventListener('blur', () => {
          imageToggled = false;
          primaryImg.style.opacity = '1';
          secondaryImg.style.opacity = '0';
        });
      }
    });
  });
})();
{% endjavascript %}

