{% liquid
  assign carousel_height = section.settings.carousel_height | default: 400
  assign show_arrows = section.settings.show_arrows | default: true
  assign scroll_speed = section.settings.scroll_speed | default: 0.5
  assign heading = section.settings.heading
%}

<section
  id="{% if section.settings.section_anchor != blank %}{{ section.settings.section_anchor }}{% else %}carousel-{{ section.id }}{% endif %}"
  class="bless-carousel bless-overlay-30"
  data-section-id="{{ section.id }}"
  data-scroll-speed="{{ scroll_speed }}"
  style="--carousel-height: {{ carousel_height }}px"
>
  <div class="bless-carousel__wrapper">
    {% if heading != blank %}
      <h2 class="bless-carousel__heading">{{ heading | escape }}</h2>
    {% endif %}

    {% if section.settings.product_1 or section.settings.product_2 or section.settings.product_3 or section.settings.product_4 or section.settings.product_5 or section.settings.product_6 or section.settings.product_7 %}
      <div class="bless-carousel__container">

        {% if show_arrows %}
          <button class="bless-carousel__arrow bless-carousel__arrow--prev" aria-label="Previous products">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        {% endif %}

        <div class="bless-carousel__viewport">
          <div class="bless-carousel__track" data-carousel-track>
            {% if section.settings.product_1 %}
              <div class="bless-carousel__slide">
                {% render 'carousel-product-slide', product: section.settings.product_1, index: 0 %}
              </div>
            {% endif %}
            {% if section.settings.product_2 %}
              <div class="bless-carousel__slide">
                {% render 'carousel-product-slide', product: section.settings.product_2, index: 1 %}
              </div>
            {% endif %}
            {% if section.settings.product_3 %}
              <div class="bless-carousel__slide">
                {% render 'carousel-product-slide', product: section.settings.product_3, index: 2 %}
              </div>
            {% endif %}
            {% if section.settings.product_4 %}
              <div class="bless-carousel__slide">
                {% render 'carousel-product-slide', product: section.settings.product_4, index: 3 %}
              </div>
            {% endif %}
            {% if section.settings.product_5 %}
              <div class="bless-carousel__slide">
                {% render 'carousel-product-slide', product: section.settings.product_5, index: 4 %}
              </div>
            {% endif %}
            {% if section.settings.product_6 %}
              <div class="bless-carousel__slide">
                {% render 'carousel-product-slide', product: section.settings.product_6, index: 5 %}
              </div>
            {% endif %}
            {% if section.settings.product_7 %}
              <div class="bless-carousel__slide">
                {% render 'carousel-product-slide', product: section.settings.product_7, index: 6 %}
              </div>
            {% endif %}
          </div>
        </div>

        {% if show_arrows %}
          <button class="bless-carousel__arrow bless-carousel__arrow--next" aria-label="Next products">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        {% endif %}
      </div>
    {% else %}
      <div class="bless-carousel__empty">
        <p>No products selected. Please select products in the section settings.</p>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .bless-carousel {
    width: 100%;
    padding: clamp(2rem, 5vw, 4rem) 0;
  }

  .bless-carousel__wrapper {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 2rem);
  }

  .bless-carousel__heading {
    font-family: var(--font-heading, 'Cardo', serif);
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 400;
    color: white;
    margin-bottom: clamp(2rem, 4vw, 3rem);
    text-align: center;
    letter-spacing: 0.02em;
    position: relative;
    z-index: 1;
  }

  .bless-carousel__container {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    gap: clamp(0.5rem, 2vw, 1rem);
    height: var(--carousel-height, 400px);
  }

  .bless-carousel__viewport {
    flex: 1;
    overflow: hidden;
    height: 100%;
    position: relative;
  }

  .bless-carousel__track {
    display: flex;
    gap: clamp(1rem, 3vw, 2rem);
    height: 100%;
    will-change: transform;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .bless-carousel__track.instant {
    transition: none !important;
  }

  .bless-carousel__slide {
    flex-shrink: 0;
    height: 100%;
  }

  /* Mobile - 2 slides */
  @media (max-width: 599px) {
    .bless-carousel__slide {
      width: calc((100vw - 10rem - 1rem) / 2);
    }
  }

  /* Tablet - 3 slides */
  @media (min-width: 600px) and (max-width: 899px) {
    .bless-carousel__slide {
      width: calc((100vw - 12rem - 2rem) / 3);
    }
  }

  /* Desktop - 2 slides (bigger cards) */
  @media (min-width: 900px) {
    .bless-carousel__slide {
      width: calc((min(100vw, 1400px) - 16rem - 1rem) / 2);
    }
  }

  .bless-carousel__card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 24px;
    overflow: hidden;
    transition: all 200ms ease-out;
    cursor: pointer;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .bless-carousel__card:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .bless-carousel__image-container {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: 20px;
    margin: 10px;
    flex-shrink: 0;
    display: block;
  }

  .bless-carousel__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: opacity 200ms ease-out;
  }

  .bless-carousel__image--primary {
    opacity: 1;
    z-index: 1;
  }

  .bless-carousel__image--secondary {
    opacity: 0;
    z-index: 0;
  }

  /* Hover effect: swap images on desktop */
  @media (hover: hover) and (pointer: fine) {
    .bless-carousel__card:hover .bless-carousel__image--primary {
      opacity: 0;
    }

    .bless-carousel__card:hover .bless-carousel__image--secondary {
      opacity: 1;
    }
  }

  .bless-carousel__content {
    padding: clamp(1rem, 3vw, 1.5rem);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: clamp(0.5rem, 2vw, 1rem);
  }

  .bless-carousel__product-title {
    font-family: var(--font-heading, 'Cardo', serif);
    font-size: clamp(1rem, 2.5vw, 1.3rem);
    font-weight: 500;
    color: var(--color-text, #000);
    margin: 0;
    line-height: 1.3;
  }

  .bless-carousel__product-title a {
    color: inherit;
    text-decoration: none;
  }

  .bless-carousel__product-description {
    font-family: var(--font-body, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif);
    font-size: clamp(0.85rem, 1.8vw, 0.95rem);
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
    line-height: 1.5;
    flex: 1;
  }

  .bless-carousel__link {
    display: inline-block;
    font-size: clamp(0.8rem, 1.5vw, 0.9rem);
    color: var(--color-link, #2E5E4C);
    text-decoration: none;
    font-weight: 500;
    padding: clamp(0.5rem, 1vw, 0.75rem) clamp(0.75rem, 2vw, 1rem);
    border: 1px solid currentColor;
    border-radius: 20px;
    transition: all 200ms ease-out;
    align-self: flex-start;
    margin-top: auto;
    background: transparent;
    cursor: pointer;
  }

  .bless-carousel__link:hover {
    background-color: var(--color-link, #2E5E4C);
    color: white;
  }

  .bless-carousel__empty {
    text-align: center;
    padding: clamp(3rem, 5vw, 5rem) 1rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
  }

  /* Navigation Arrows */
  .bless-carousel__arrow {
    flex-shrink: 0;
    width: clamp(48px, 8vw, 64px);
    height: clamp(48px, 8vw, 64px);
    min-width: 48px;
    min-height: 48px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 200ms ease-out;
    cursor: pointer;
    color: white;
    z-index: 10;
  }

  .bless-carousel__arrow:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: scale(1.1);
  }

  .bless-carousel__arrow:active {
    background: rgba(255, 255, 255, 0.25);
    transform: scale(0.95);
  }

  .bless-carousel__arrow svg {
    width: clamp(20px, 3vw, 28px);
    height: clamp(20px, 3vw, 28px);
  }
{% endstylesheet %}

