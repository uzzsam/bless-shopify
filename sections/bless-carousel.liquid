<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    const track = section.querySelector('[data-carousel-track]');
    const prevBtn = section.querySelector('.bless-carousel__arrow--prev');
    const nextBtn = section.querySelector('.bless-carousel__arrow--next');
    const viewport = section.querySelector('.bless-carousel__viewport');
    const scrollSpeed = parseFloat(section.getAttribute('data-scroll-speed')) || 0.5;

    if (!track) return;

    const slides = Array.from(track.querySelectorAll('.bless-carousel__slide'));
    const totalSlides = slides.length;
    if (totalSlides === 0) return;

    function getVisibleItems() {
      const width = window.innerWidth;
      if (width < 600) return 2;
      if (width < 900) return 3;
      return 2; // desktop: 2 cards only
    }

    let visibleItems = getVisibleItems();
    let currentIndex = 0; // index in the original slides array
    let isAutoScrolling = true;
    let autoScrollInterval;
    let isTransitioning = false;

    // Clone all slides at beginning and end for seamless looping
    function setupClones() {
      // Remove existing clones
      track.querySelectorAll('[data-clone]').forEach(el => el.remove());

      // Clone all slides and add to end
      for (let i = 0; i < totalSlides; i++) {
        const clone = slides[i].cloneNode(true);
        clone.setAttribute('data-clone', 'true');
        clone.setAttribute('aria-hidden', 'true');
        track.appendChild(clone);
      }

      // Clone all slides and add to beginning
      for (let i = totalSlides - 1; i >= 0; i--) {
        const clone = slides[i].cloneNode(true);
        clone.setAttribute('data-clone', 'true');
        clone.setAttribute('aria-hidden', 'true');
        track.insertBefore(clone, track.firstChild);
      }
    }

    setupClones();

    function getSlideWidth() {
      if (slides.length === 0) return 0;
      const rect = slides[0].getBoundingClientRect();
      const gap = parseFloat(window.getComputedStyle(track).gap) || 0;
      return rect.width + gap;
    }

    // Update visual position: always show real slides, seamlessly loop
    function updatePosition(animate = true) {
      const slideWidth = getSlideWidth();
      // offset accounts for clones at beginning
      const offset = -(currentIndex + totalSlides) * slideWidth;

      if (animate) {
        track.classList.remove('instant');
      } else {
        track.classList.add('instant');
      }

      track.style.transform = `translateX(${offset}px)`;
    }

    // Continuous smooth auto-scroll
    function autoScroll() {
      if (!isAutoScrolling) return;

      // Advance by fractional amount each frame for smooth scroll
      const increment = scrollSpeed * 0.01;
      currentIndex += increment;

      // When we've scrolled past all slides, wrap to beginning seamlessly
      if (currentIndex >= totalSlides) {
        currentIndex -= totalSlides; // wrap without jump
        // Disable transition during wraparound for invisible reset
        track.classList.add('instant');
        updatePosition(true);
        // Re-enable transition on next frame
        setTimeout(() => {
          track.classList.remove('instant');
        }, 16);
      } else {
        updatePosition(true);
      }
    }

    // Arrow click: advance by one full slide
    function handleArrowClick(direction) {
      if (isTransitioning) return;

      isTransitioning = true;
      isAutoScrolling = false;
      clearInterval(autoScrollInterval);

      // Move exactly one slide
      currentIndex += direction;

      // Wrap around seamlessly
      if (currentIndex >= totalSlides) {
        currentIndex = 0;
      } else if (currentIndex < 0) {
        currentIndex = totalSlides - 1;
      }

      updatePosition(true);

      // Resume auto-scroll after transition
      setTimeout(() => {
        isTransitioning = false;
        isAutoScrolling = true;
        startAutoScroll();
      }, 600);
    }

    function startAutoScroll() {
      clearInterval(autoScrollInterval);
      autoScrollInterval = setInterval(autoScroll, 16); // 60fps
    }

    // Pause on hover
    const hoverTargets = [viewport, prevBtn, nextBtn].filter(Boolean);
    hoverTargets.forEach(el => {
      el.addEventListener('mouseenter', () => {
        isAutoScrolling = false;
        clearInterval(autoScrollInterval);
      });
      el.addEventListener('mouseleave', () => {
        isAutoScrolling = true;
        startAutoScroll();
      });
    });

    // Handle resize
    window.addEventListener('resize', () => {
      const newVisibleItems = getVisibleItems();
      if (newVisibleItems !== visibleItems) {
        visibleItems = newVisibleItems;
        updatePosition(false);
      }
    });

    // Arrow listeners
    if (prevBtn) prevBtn.addEventListener('click', () => handleArrowClick(-1));
    if (nextBtn) nextBtn.addEventListener('click', () => handleArrowClick(1));

    // Initialize
    updatePosition(false);
    startAutoScroll();

    // Cleanup
    document.addEventListener('shopify:section:unload', (event) => {
      if (event.detail?.sectionId === sectionId) {
        clearInterval(autoScrollInterval);
      }
    });
  });
</script>
