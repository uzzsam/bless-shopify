{% liquid
  assign carousel_height = section.settings.carousel_height | default: 400
  assign show_arrows = section.settings.show_arrows | default: true
  assign show_autoplay = section.settings.show_autoplay | default: false
  assign autoplay_speed_ms = section.settings.autoplay_speed | default: 5000
  assign autoplay_speed = autoplay_speed_ms | divided_by: 1000
  assign carousel_behavior = section.settings.carousel_behavior | default: 'infinite'
  assign scroll_speed = section.settings.scroll_speed | default: 0.5
  assign heading = section.settings.heading
  assign product_count = 0
  assign slide_index = 0
%}

<section
  id="{% if section.settings.section_anchor != blank %}{{ section.settings.section_anchor }}{% else %}carousel-{{ section.id }}{% endif %}"
  class="bless-carousel bless-overlay-30"
  data-section-id="{{ section.id }}"
  data-carousel-behavior="{{ carousel_behavior }}"
  data-scroll-speed="{{ scroll_speed }}"
>
  <div class="bless-carousel__wrapper">
    {% if heading != blank %}
      <h2 class="bless-carousel__heading">{{ heading | escape }}</h2>
    {% endif %}

    {% if product_count > 0 or section.settings.product_1 or section.settings.product_2 or section.settings.product_3 or section.settings.product_4 or section.settings.product_5 or section.settings.product_6 or section.settings.product_7 %}
      <div class="bless-carousel__container" style="height: {{ carousel_height }}px;">
        <div class="bless-carousel__track">
          {% if section.settings.product_1 %}
            {% render 'carousel-product-slide', product: section.settings.product_1, index: 0 %}
          {% endif %}
          {% if section.settings.product_2 %}
            {% render 'carousel-product-slide', product: section.settings.product_2, index: 1 %}
          {% endif %}
          {% if section.settings.product_3 %}
            {% render 'carousel-product-slide', product: section.settings.product_3, index: 2 %}
          {% endif %}
          {% if section.settings.product_4 %}
            {% render 'carousel-product-slide', product: section.settings.product_4, index: 3 %}
          {% endif %}
          {% if section.settings.product_5 %}
            {% render 'carousel-product-slide', product: section.settings.product_5, index: 4 %}
          {% endif %}
          {% if section.settings.product_6 %}
            {% render 'carousel-product-slide', product: section.settings.product_6, index: 5 %}
          {% endif %}
          {% if section.settings.product_7 %}
            {% render 'carousel-product-slide', product: section.settings.product_7, index: 6 %}
          {% endif %}
        </div>

        {% if show_arrows %}
        <div class="bless-carousel__arrows">
          <button class="bless-carousel__arrow bless-carousel__arrow--prev" aria-label="Previous slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button class="bless-carousel__arrow bless-carousel__arrow--next" aria-label="Next slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
        {% endif %}
      </div>
    {% else %}
      <div class="bless-carousel__empty">
        <p>No products selected. Please select products in the section settings.</p>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .bless-carousel {
    width: 100%;
    padding: clamp(2rem, 5vw, 4rem) 0;
    backdrop-filter: blur(15px);
  }

  .bless-carousel__wrapper {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 2rem);
  }

  .bless-carousel__heading {
    font-family: var(--font-heading, 'Cardo', serif);
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 400;
    color: white;
    margin-bottom: clamp(2rem, 4vw, 3rem);
    text-align: center;
    letter-spacing: 0.02em;
    position: relative;
    z-index: 1;
  }

  .bless-carousel__container {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .bless-carousel__track {
    display: flex;
    gap: clamp(1rem, 3vw, 2rem);
    will-change: transform;
    transition: none;
  }

  /* One-way behavior - smooth transitions */
  [data-carousel-behavior="one-way"] .bless-carousel__track {
    transition: transform 0.5s ease-out;
  }

  .bless-carousel__slide {
    flex-shrink: 0;
    width: 100%;
    min-height: 100%;
    height: 100%;
  }

  /* Card styling with glass design */
  .bless-carousel__card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 24px;
    overflow: hidden;
    transition: all 200ms ease-out;
    cursor: pointer;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .bless-carousel__card:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  /* Image Container */
  .bless-carousel__image-container {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* 1:1 aspect ratio */
    overflow: hidden;
    border-radius: 20px;
    margin: 10px;
    flex-shrink: 0;
  }

  .bless-carousel__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: opacity 200ms ease-out;
  }

  .bless-carousel__image--primary {
    opacity: 1;
  }

  .bless-carousel__image--secondary {
    opacity: 0;
  }

  /* Hover effect: swap images on desktop */
  @media (hover: hover) and (pointer: fine) {
    .bless-carousel__card:hover .bless-carousel__image--primary {
      opacity: 0;
    }

    .bless-carousel__card:hover .bless-carousel__image--secondary {
      opacity: 1;
    }
  }

  /* Card Content */
  .bless-carousel__content {
    padding: clamp(1rem, 3vw, 1.5rem);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: clamp(0.5rem, 2vw, 1rem);
  }

  .bless-carousel__product-title {
    font-family: var(--font-heading, 'Cardo', serif);
    font-size: clamp(1rem, 2.5vw, 1.3rem);
    font-weight: 500;
    color: var(--color-text, #000);
    margin: 0;
    line-height: 1.3;
  }

  .bless-carousel__product-description {
    font-family: var(--font-body, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif);
    font-size: clamp(0.85rem, 1.8vw, 0.95rem);
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
    line-height: 1.5;
    flex: 1;
  }

  .bless-carousel__link {
    display: inline-block;
    font-size: clamp(0.8rem, 1.5vw, 0.9rem);
    color: var(--color-link, #2E5E4C);
    text-decoration: none;
    font-weight: 500;
    padding: clamp(0.5rem, 1vw, 0.75rem) clamp(0.75rem, 2vw, 1rem);
    border: 1px solid currentColor;
    border-radius: 20px;
    transition: all 200ms ease-out;
    align-self: flex-start;
    margin-top: auto;
  }

  .bless-carousel__link:hover {
    background-color: var(--color-link, #2E5E4C);
    color: white;
  }

  /* Empty state */
  .bless-carousel__empty {
    text-align: center;
    padding: clamp(3rem, 5vw, 5rem) 1rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
  }

  /* Navigation Arrows - Always Visible */
  .bless-carousel__arrows {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    align-items: center;
    pointer-events: none;
    z-index: 10;
    padding: 0 clamp(1rem, 3vw, 2rem);
  }

  .bless-carousel__arrow {
    width: clamp(48px, 8vw, 64px);
    height: clamp(48px, 8vw, 64px);
    min-width: 48px;
    min-height: 48px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 200ms ease-out;
    cursor: pointer;
    pointer-events: auto;
    color: white;
    opacity: 1;
    visibility: visible;
  }

  .bless-carousel__arrow:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: scale(1.1);
  }

  .bless-carousel__arrow:active {
    background: rgba(255, 255, 255, 0.25);
    transform: scale(0.95);
  }

  .bless-carousel__arrow svg {
    width: clamp(20px, 3vw, 28px);
    height: clamp(20px, 3vw, 28px);
  }

  /* Responsive: Mobile */
  @media (max-width: 599px) {
    .bless-carousel__slide {
      width: 100%;
    }
  }

  /* Responsive: Tablet */
  @media (min-width: 600px) and (max-width: 899px) {
    .bless-carousel__slide {
      width: calc(50% - 0.5rem);
    }
  }

  /* Responsive: Desktop */
  @media (min-width: 900px) {
    .bless-carousel__slide {
      width: calc(33.333% - 1.33rem);
    }
  }
{% endstylesheet %}

{% javascript %}
(function() {
  const isTouchDevice = () => {
    return (('ontouchstart' in window) ||
            (navigator.maxTouchPoints > 0) ||
            (navigator.msMaxTouchPoints > 0));
  };

  document.addEventListener('DOMContentLoaded', () => {
    // Handle image swapping for touch devices
    const cards = document.querySelectorAll('.bless-carousel__card');
    cards.forEach(card => {
      const primaryImg = card.querySelector('[data-primary-image]');
      const secondaryImg = card.querySelector('[data-secondary-image]');

      if (!secondaryImg) return;

      if (isTouchDevice()) {
        let imageToggled = false;

        card.addEventListener('click', (e) => {
          if (e.target.closest('.bless-carousel__link')) {
            return;
          }

          e.preventDefault();

          if (!imageToggled) {
            primaryImg.style.opacity = '0';
            secondaryImg.style.opacity = '1';
            imageToggled = true;
          } else {
            window.location.href = card.dataset.productUrl;
          }
        });

        card.addEventListener('blur', () => {
          imageToggled = false;
          primaryImg.style.opacity = '1';
          secondaryImg.style.opacity = '0';
        });
      }
    });

    // Initialize carousel
    const carousels = document.querySelectorAll('.bless-carousel');
    
    carousels.forEach(carousel => {
      const track = carousel.querySelector('.bless-carousel__track');
      const slides = Array.from(carousel.querySelectorAll('.bless-carousel__slide'));
      const prevButton = carousel.querySelector('.bless-carousel__arrow--prev');
      const nextButton = carousel.querySelector('.bless-carousel__arrow--next');
      const behavior = carousel.dataset.carouselBehavior;
      const scrollSpeed = parseFloat(carousel.dataset.scrollSpeed) || 0.5;
      
      if (!track || slides.length === 0) return;

      let position = 0;
      let animationId = null;
      let isScrolling = behavior === 'infinite';
      let currentIndex = 0;

      // Clone slides for infinite loop
      if (behavior === 'infinite') {
        slides.forEach(slide => {
          const clone = slide.cloneNode(true);
          track.appendChild(clone);
        });
      }

      function getSlideWidth() {
        return slides[0].offsetWidth + parseFloat(getComputedStyle(track).gap) || 0;
      }

      function scroll() {
        if (!isScrolling) return;

        position -= scrollSpeed;
        const slideWidth = getSlideWidth();
        const resetPoint = -slideWidth * slides.length;

        if (position <= resetPoint) {
          position = 0;
        }

        track.style.transform = `translateX(${position}px)`;
        animationId = requestAnimationFrame(scroll);
      }

      function slideToIndex(index) {
        const slideWidth = getSlideWidth();
        position = -slideWidth * index;
        track.style.transform = `translateX(${position}px)`;
        currentIndex = index;
      }

      function nextSlide() {
        if (behavior === 'infinite') {
          // For infinite, just let it continue scrolling
          return;
        } else {
          // For one-way, move to next slide
          if (currentIndex < slides.length - 1) {
            currentIndex++;
            slideToIndex(currentIndex);
          }
        }
      }

      function prevSlide() {
        if (behavior === 'infinite') {
          // For infinite, reverse direction temporarily
          const slideWidth = getSlideWidth();
          position += slideWidth;
          track.style.transform = `translateX(${position}px)`;
        } else {
          // For one-way, move to previous slide
          if (currentIndex > 0) {
            currentIndex--;
            slideToIndex(currentIndex);
          }
        }
      }

      // Pause on hover for infinite scroll
      if (behavior === 'infinite') {
        carousel.addEventListener('mouseenter', () => {
          isScrolling = false;
          if (animationId) {
            cancelAnimationFrame(animationId);
          }
        });

        carousel.addEventListener('mouseleave', () => {
          isScrolling = true;
          scroll();
        });

        // Start infinite scroll
        scroll();
      }

      // Arrow buttons
      if (prevButton) {
        prevButton.addEventListener('click', prevSlide);
      }

      if (nextButton) {
        nextButton.addEventListener('click', nextSlide);
      }

      // Touch/drag support
      let isDragging = false;
      let startX = 0;
      let currentTranslate = 0;
      let prevTranslate = 0;

      track.addEventListener('mousedown', dragStart);
      track.addEventListener('touchstart', dragStart);
      track.addEventListener('mousemove', drag);
      track.addEventListener('touchmove', drag);
      track.addEventListener('mouseup', dragEnd);
      track.addEventListener('touchend', dragEnd);
      track.addEventListener('mouseleave', dragEnd);

      function dragStart(e) {
        if (behavior === 'infinite') {
          isScrolling = false;
          if (animationId) {
            cancelAnimationFrame(animationId);
          }
        }
        isDragging = true;
        startX = e.type.includes('mouse') ? e.pageX : e.touches[0].clientX;
        prevTranslate = position;
        track.style.cursor = 'grabbing';
      }

      function drag(e) {
        if (!isDragging) return;
        e.preventDefault();
        const currentX = e.type.includes('mouse') ? e.pageX : e.touches[0].clientX;
        const diff = currentX - startX;
        currentTranslate = prevTranslate + diff;
        track.style.transform = `translateX(${currentTranslate}px)`;
      }

      function dragEnd() {
        if (!isDragging) return;
        isDragging = false;
        track.style.cursor = 'grab';
        
        const movedBy = currentTranslate - prevTranslate;
        
        if (behavior === 'infinite') {
          position = currentTranslate;
          isScrolling = true;
          scroll();
        } else {
          // Snap to nearest slide
          if (Math.abs(movedBy) > 50) {
            if (movedBy > 0 && currentIndex > 0) {
              currentIndex--;
            } else if (movedBy < 0 && currentIndex < slides.length - 1) {
              currentIndex++;
            }
          }
          slideToIndex(currentIndex);
        }
      }
    });
  });
})();
{% endjavascript %}

