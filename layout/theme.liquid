<!doctype html>
<html
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'stylesheets' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Albert+Sans:ital,wght@0,100..900;1,100..900&family=Cardo:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    >
    <style id="bless-theme-variables">
      :root {
        --color-brown: 65, 65, 65;
        --color-light-green: 168, 204, 193;
        --color-dark-green: 46, 94, 76;
        --color-avocado: 227, 216, 154;
        --color-light-flesh: 236, 227, 214;
        --font-heading: 'Cardo', serif;
        --font-body: 'Albert Sans', 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        {% if settings.bless_body_background != blank %}
          --bless-body-background-image: url('{{ settings.bless_body_background | image_url: width: 2400 }}');
        {% endif %}
      }

      body {
        font-family: var(--font-body);
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: var(--font-heading);
      }

      .bless-landing {
        background-image: var(--bless-body-background-image, none);
        background-size: cover;
        background-position: center calc(var(--bless-bg-offset, 0px));
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-color: #184135;
      }
    </style>

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

{% liquid
  assign bless_layout_active = false
  if template contains 'page.bless'
    assign bless_layout_active = true
  elsif template contains 'index.bless'
    assign bless_layout_active = true
  elsif template == 'index'
    assign bless_layout_active = true
  endif
%}

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}{% if bless_layout_active %} bless-landing{% endif %}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    <script src="{{ 'hero-video-controls.js' | asset_url }}" defer></script>

    <script>
      (function () {
        const body = document.body;
        if (!body || !body.classList.contains('bless-landing')) return;

        let ticking = false;
        const update = () => {
          const offset = Math.max(-window.scrollY * 0.3, -800);
          body.style.setProperty('--bless-bg-offset', offset + 'px');
          ticking = false;
        };

        update();

        window.addEventListener(
          'scroll',
          () => {
            if (!ticking) {
              window.requestAnimationFrame(update);
              ticking = true;
            }
          },
          { passive: true }
        );
      })();
    </script>
  </body>
</html>
