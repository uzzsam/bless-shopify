{% doc %}
  @prompt
    a carousel of selected products in the style "bless", Every product has 2 images. show the images and swap to the second image on hover. Allow configuration of corner radius of cards and opacity.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-carousel-{{ ai_gen_id }} {
    width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-product-carousel__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-product-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-product-carousel__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-product-carousel__subtitle-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: 18px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-product-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-product-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
  }

  .ai-product-carousel__track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-carousel__item-{{ ai_gen_id }} {
    flex: 0 0 calc(33.333% - 14px);
    min-width: 280px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_corner_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
    opacity: {{ block.settings.card_opacity | divided_by: 100.0 }};
  }

  .ai-product-carousel__item-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-product-carousel__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-carousel__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.4s ease;
  }

  .ai-product-carousel__image-{{ ai_gen_id }}--primary {
    opacity: 1;
    z-index: 2;
  }

  .ai-product-carousel__image-{{ ai_gen_id }}--secondary {
    opacity: 0;
    z-index: 1;
  }

  .ai-product-carousel__image-wrapper-{{ ai_gen_id }}:hover .ai-product-carousel__image-{{ ai_gen_id }}--primary {
    opacity: 0;
  }

  .ai-product-carousel__image-wrapper-{{ ai_gen_id }}:hover .ai-product-carousel__image-{{ ai_gen_id }}--secondary {
    opacity: 1;
  }

  .ai-product-carousel__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-carousel__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-carousel__info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-product-carousel__product-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_subheading_font.family }}, {{ settings.type_subheading_font.fallback_families }};
    font-size: 18px;
    color: {{ block.settings.text_color }};
    margin: 0 0 10px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-carousel__price-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: 16px;
    color: {{ block.settings.price_color }};
    margin-bottom: 15px;
  }

  .ai-product-carousel__button-{{ ai_gen_id }} {
    display: inline-block;
    width: 100%;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    font-family: {{ settings.type_accent_font.family }}, {{ settings.type_accent_font.fallback_families }};
    font-size: 14px;
    letter-spacing: 1px;
    border: 1px solid {{ block.settings.button_border }};
    transition: all 0.3s ease;
  }

  .ai-product-carousel__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border }};
  }

  .ai-product-carousel__nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.nav_background }};
    border: 1px solid {{ block.settings.nav_border }};
    color: {{ block.settings.nav_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    transition: all 0.3s ease;
  }

  .ai-product-carousel__nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_hover_background }};
    color: {{ block.settings.nav_hover_color }};
  }

  .ai-product-carousel__nav-{{ ai_gen_id }}--prev {
    left: -20px;
  }

  .ai-product-carousel__nav-{{ ai_gen_id }}--next {
    right: -20px;
  }

  .ai-product-carousel__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-product-carousel__item-{{ ai_gen_id }} {
      flex: 0 0 calc(50% - 10px);
      min-width: 250px;
    }

    .ai-product-carousel__nav-{{ ai_gen_id }} {
      display: none;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-carousel__item-{{ ai_gen_id }} {
      flex: 0 0 calc(100% - 20px);
      min-width: 280px;
    }

    .ai-product-carousel__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }} class="ai-product-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-carousel__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-product-carousel__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-product-carousel__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-product-carousel__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.products != blank %}
      <div class="ai-product-carousel__wrapper-{{ ai_gen_id }}">
        <button
          class="ai-product-carousel__nav-{{ ai_gen_id }} ai-product-carousel__nav-{{ ai_gen_id }}--prev"
          aria-label="Previous products"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="ai-product-carousel__track-{{ ai_gen_id }}">
          {% for product in block.settings.products %}
            <div class="ai-product-carousel__item-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-product-carousel__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-carousel__image-{{ ai_gen_id }} ai-product-carousel__image-{{ ai_gen_id }}--primary"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-product-carousel__placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 600 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    class="ai-product-carousel__image-{{ ai_gen_id }} ai-product-carousel__image-{{ ai_gen_id }}--secondary"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% endif %}
              </a>

              <div class="ai-product-carousel__info-{{ ai_gen_id }}">
                <h3 class="ai-product-carousel__product-title-{{ ai_gen_id }}">
                  {{ product.title }}
                </h3>

                <div class="ai-product-carousel__price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span style="text-decoration: line-through; opacity: 0.6;">
                      {{ product.compare_at_price | money }}
                    </span>
                    <span style="margin-left: 8px;">{{ product.price | money }}</span>
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </div>

                <a href="{{ product.url }}" class="ai-product-carousel__button-{{ ai_gen_id }}">
                  {{ block.settings.button_label }}
                </a>
              </div>
            </div>
          {% endfor %}
        </div>

        <button
          class="ai-product-carousel__nav-{{ ai_gen_id }} ai-product-carousel__nav-{{ ai_gen_id }}--next"
          aria-label="Next products"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% else %}
      <div class="ai-product-carousel__empty-{{ ai_gen_id }}">
        Select products to display in this carousel
      </div>
    {% endif %}
  </div>
</product-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-product-carousel__track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-product-carousel__nav-{{ ai_gen_id }}--prev');
        this.nextButton = this.querySelector('.ai-product-carousel__nav-{{ ai_gen_id }}--next');

        if (this.track && this.prevButton && this.nextButton) {
          this.setupNavigation();
        }
      }

      setupNavigation() {
        this.prevButton.addEventListener('click', () => {
          const scrollAmount = this.track.offsetWidth * 0.8;
          this.track.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
        });

        this.nextButton.addEventListener('click', () => {
          const scrollAmount = this.track.offsetWidth * 0.8;
          this.track.scrollBy({ left: scrollAmount, behavior: 'smooth' });
        });
      }
    }

    customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
  })();
</script>

